<% layout("layouts/boilerplate") %>
    <div class="row">
        <h1 class="text-center">New Campground</h1>
        <div class="col-6 offset-3">
            <form action="/campgrounds" method="POST">
                <!-- TITLE -->
                <div class="mb-3">
                    <label class="form-label" for="title">Title</label>
                    <input class="form-control" type="text" id="title" name="campground[title]">
                </div>
                <!-- LOCATION -->
                <div class="mb-3">
                    <label class="form-label" for="location">Location</label>
                    <input class="form-control" type="text" id="location" name="campground[location]">
                </div>
                <!-- IMAGE URL -->
                <div class="mb-3">
                    <label class="form-label" for="image">Image URL</label>
                    <input class="form-control" type="text" id="image" name="campground[image]">
                </div>
                <!-- PRICE -->
                <div class="mb-3">
                    <label class="form-label" for="price">Campground Price</label>
                    <div class="input-group">
                        <span class="input-group-text" id="price-label">$</span>
                        <input class="form-control" type="text" id="price" name="campground[price]" placeholder="0.00"
                            aria-label="price" aria-describedby="price-label">
                    </div>
                </div>
                <!-- DESCRIPTION -->
                <div class="mb-3">
                    <label class="form-label" for="description">Description</label>
                    <textarea class="form-control" type="text" id="description"
                        name="campground[description]"></textarea>
                </div>
                <!-- SUBMIT BUTTON -->
                <div class="mb-3"><button class="btn btn-success">Add Campground</button></div>
            </form>
            <a href="/campgrounds">All Campgrounds</a>
        </div>
    </div>